<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.boomtown.ckesho.playground.CIDActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2d2dfe"
        android:textSize="22dp"
        android:text="Phone goes here"
        android:id="@+id/lbl_incomingCall"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1cfac1"
        android:textSize="22dp"
        android:text="Phone State goes here"
        android:id="@+id/lbl_phoneState"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2d2dfe"
        android:textSize="22dp"
        android:text="network type"
        android:id="@+id/lbl_networktype"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1cfac1"
        android:textSize="22dp"
        android:text="Network State"
        android:id="@+id/lbl_networkstate"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start CID service"
        android:id="@+id/btn_startCID" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop CID service"
        android:id="@+id/btn_endCID" />

</LinearLayout>
