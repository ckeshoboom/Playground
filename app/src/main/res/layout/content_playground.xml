<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/index"
    tools:context=".Playground">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LeadProfileActivity"
        android:id="@+id/btn_leadProfileActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SwipeActivity"
        android:id="@+id/btn_swipeActivity"
        android:layout_below="@+id/btn_leadProfileActivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FeedActivity"
        android:id="@+id/btn_feedActivity"
        android:layout_below="@+id/btn_swipeActivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Contacts Activity"
        android:id="@+id/btn_SearchContactsActivity"
        android:layout_below="@+id/btn_feedActivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caller ID Activity"
        android:id="@+id/btn_CIDActivity"
        android:layout_below="@+id/btn_SearchContactsActivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frag Holder Activity"
        android:id="@+id/btn_FragHolderActivity"
        android:layout_below="@+id/btn_CIDActivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>