<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_all"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingTop="4dp">



    <RelativeLayout
        android:id="@+id/rl_center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:clickable="false"
        android:visibility="visible">

        <TextView
            android:id="@+id/lbl_swipeItem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/btn_center1"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/kesho_chris_72px_gray"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:foreground="@drawable/circle_mask"/>

        <TextView
            android:id="@+id/lbl_leadProfileLeadPhotoLeadType"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:textColor="#1581e2"
            android:text="B"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_alignBottom="@id/btn_center1"
            android:layout_alignRight="@id/btn_center1"
            android:includeFontPadding="true"
            android:background="@drawable/rectangle_frame"
             />

        <TextView
            android:id="@+id/lbl_leadProfileLeadPhotoLeadCat"
            android:layout_width="32dp"
            android:layout_height="18dp"
            android:textColor="#ffffff"
            android:background="@drawable/category_qual_frame"
            android:text="qual"
            android:layout_above="@id/lbl_leadProfileLeadPhotoLeadType"
            android:layout_alignRight="@id/btn_center1"
            android:gravity="center"
            android:includeFontPadding="true"
            android:alpha=".75" />
        <TextView
            android:id="@+id/lblName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Truman Sparks"
            android:layout_toRightOf="@id/btn_center1"
            android:textStyle="bold"
            android:clickable="false"
            android:layout_marginTop="4dp" />
        <TextView
            android:id="@+id/lblDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registered 17 days ago"
            android:layout_toRightOf="@id/btn_center1"
            android:layout_below="@+id/lblName"
            android:textSize="8sp"
            android:clickable="false"/>
        <TextView
            android:id="@+id/lblAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="129 James Avenue, Smyrna, GA"
            android:layout_toRightOf="@id/btn_center1"
            android:layout_below="@+id/lblDate"
            android:textSize="12sp"
            android:clickable="false"/>
        <TextView
            android:id="@+id/lblMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yo I am unable to see homes until Saturday. What is your schedule like this weekend? Sucks..."
            android:layout_toRightOf="@id/btn_center1"
            android:layout_below="@+id/lblAddress"
            android:textSize="12sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:clickable="false"/>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_left"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">


        <Button
            android:id="@+id/btn_left1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/list_24px"
            android:background="#00000000"
            android:clickable="false"
            android:text="+ To-Do"
            android:textSize="12sp"
            android:elevation="64dp" />


        <Button
            android:id="@+id/btn_left2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/blog_24px"
            android:background="#00000000"
            android:clickable="false"
            android:text="+ Note"
            android:textSize="12sp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_left3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/update_24px"
            android:background="#00000000"
            android:clickable="false"
            android:textColor="#000000"
            android:text="+ Category"
            android:textSize="12sp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_right"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_right1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:drawableTop="@drawable/icon_comm_phone_green"
            android:text="2 calls"
            android:textSize="12sp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_right2"
            android:text="10 emails"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_comm_email_green"
            android:background="#00000000"
            />

        <Button
            android:id="@+id/btn_right3"
            android:text="0 texts"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_comm_text_green"
            android:background="#00000000"/>


    </LinearLayout>


</LinearLayout>

