<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.boomtown.ckesho.playground.FragmentHolderActivity"
    android:padding="0dp"
    android:orientation="vertical">


    <include layout="@layout/conv_item_date"></include>

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <ImageView
        android:id="@+id/iv_conv_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_messages"
        android:tint="#000"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/tv_conv_item_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="7:03 PM"
        android:textColor="#dfdfdf"
        android:layout_toRightOf="@+id/iv_conv_item_text"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/tv_conv_item_identification"
        android:layout_toRightOf="@+id/iv_conv_item_text"
        android:layout_below="@+id/tv_conv_item_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="truman@gmail.com)"
        android:textColor="#dfdfdf"/>

    <android.support.v7.widget.CardView
        android:layout_below="@+id/iv_conv_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cardview_gray"
            android:orientation="vertical"
            android:divider="@drawable/divider"
            android:showDividers="middle"
            android:dividerPadding="5dp">

            <TextView
                android:id="@+id/tv_conv_item_message"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Truman asked me to get in touch with you. Any more homes in rutledge area?"
                android:textColor="#000"
                android:maxWidth="250dp" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>
